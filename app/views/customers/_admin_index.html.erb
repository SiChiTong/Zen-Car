<p>Hello ADMIN!</p>

<hr>
<p>CARS</p>
<br>

<table>
  <thead>
  <tr>
    <th>License no</th>
    <th>Manufacturer</th>
    <th>Hourly rate</th>
    <th>Model</th>
    <th>Location</th>
    <th>Style</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @cars.each do |car| %>
      <tr>
        <td><%= car.license_no %></td>
        <td><%= car.manufacturer %></td>
        <td><%= car.hourly_rate %></td>
        <td><%= car.model %></td>
        <td><%= car.location %></td>
        <td><%= car.style%></td>
        <td><%= car.status%></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Car', new_car_path %>


<hr>
<p>CUSTOMERS</p>

<% @customers.each do |customer| %>
    <% unless customer.id.equal? current_customer.id %>
    <tr>
      <td><%= customer.email %></td>
      <td><%= link_to 'Show', customer %></td>
      <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
      <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <br>
    <% end %>
<% end %>
<br>
<%= link_to 'New Customer', new_customer_path, method: :get %>

<hr>
<p>ADMINS</p>
<% @customers.each do |customer| if customer.admin? %>
    <% unless customer.id.equal? current_customer.id %>
        <tr>
          <td><%= customer.email %></td>
          <td><%= link_to 'Show', customer %></td>
          <!-- <td><%= link_to 'Edit', edit_customer_path(customer) %></td> -->
          <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <br>
    <% end %>
  <% end %>
<% end %>
<br>
<%= link_to 'New Admin', new_customer_path, method: :get %>

