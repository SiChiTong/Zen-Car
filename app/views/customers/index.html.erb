<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% if current_customer.admin? %>
    <p>Hello ADMIN!</p>
    <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to 'Show', customer %></td>
          <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
          <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  <% else %>
    <p>Hello USER!</p>
  <% end %>

  </tbody>
</table>

<br>

<%= form_tag cars_path, method: :get do %>
    <%= text_field_tag :location, params[:location], placeholder: "Location" %>
    <%= text_field_tag :manufacturer, params[:manufacturer], placeholder: "Manufacturer" %>
    <%= text_field_tag :model, params[:model] , placeholder:"Model"%>
    <%= text_field_tag :style, params[:style], placeholder:"Style" %>
    <%= text_field_tag :status, params[:status],placeholder:"Status" %>
    <%= submit_tag "Search", name: nil %>
<% end %>


<%= link_to 'New Customer', new_customer_path %>